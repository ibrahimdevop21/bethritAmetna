---
import BaseLayout from '../layouts/BaseLayout.astro';
import CustomerInfoForm from '../components/CustomerInfoForm.jsx';
---

<BaseLayout title="Staff Entry" description="Internal staff entry form for Bethrit Ametna.">
	<main class="min-h-screen bg-neutral-950 text-neutral-50">
		<!-- App Header -->
		<header class="w-full flex justify-center pt-6 pb-4">
			<img src="/logo.svg" alt="Bethrit Ametna" class="w-[110px] sm:w-[130px]" />
		</header>

		<!-- Form Container -->
		<div class="w-full max-w-lg mx-auto px-4 pb-32">
			<CustomerInfoForm client:load />
		</div>
	</main>
</BaseLayout>
